include mixins
doctype html
html
	head
		meta(charset="utf-8")
		base(href="/")

		title Etiquetador de entradas de Tumblr

		block css
			link(href="css/bootstrap.min.css", rel="stylesheet")
			link(href="css/taggeador.css", rel="stylesheet")
	body
		.container
				header
						h1
							+icono("tags", "Etiquetador de entradas de Tumblr")
						div.buttonPlaceHolder
							block header
						if !isLoginPage
							div.buttonPlaceHolder
								a(href="/logout")
									+icono("eject", "Salir")
				.row
					block content
		block scripts
			script(src="js/jquery-1.9.1.min.js")
			script(src="js/bootstrap.min.js")
